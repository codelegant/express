- var currentUrl=path
- var message=msg
doctype html
html(lang="zh-Hans")
  head
    title 程序师-#{title}
    block link
      link(rel="stylesheet", href="/semantic/dist/semantic.min.css")
    block script
      script(src="/requirejs/require.js",data-main="/javascripts/main.js")
  body
    .ui.secondary.pointing.menu.grid
      .ui.container
        a.item(href="/",class={active:currentUrl==="/"}) 主页
        a.item(href="/signin",class={active:currentUrl==="/signin"}) 登入
        a.item(href="/signup",class={active:currentUrl==="/signup"}) 注册
        a.item(href="/setting/profile",class={active:currentUrl==="/profile"})  个人中心
        .right.item
          .ui.input.icon
            input(type="text",placeholder="回车搜索……")
            i.search.icon
        a.item(href="/signout") 登出
  - if(message){
    .ui.message.container.floating.grid
      i.close.icon
      .header=message
  - }
    .ui.container.grid
      //.ui.large.header.dividing=title
      block content