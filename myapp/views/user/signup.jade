extends ../layout

block content
	.ui.two.column.centered.grid
		.column
			form.ui.form(method="post")
				.field
					label(for="username") 用户名
					input(type="text", name="username", placeholder="用户名")
				.field
					label(for="password") 密码
					input(type="password", name="password", placeholder="6到15位，包含数字和字母")
				.field
					label(for="password_again") 确认密码
					input(type="password", name="password_again", placeholder="确认密码")
				button.ui.fluid.button.blue(type="submit") 注册